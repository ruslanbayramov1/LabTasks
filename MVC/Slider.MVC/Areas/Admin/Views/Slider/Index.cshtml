@model ICollection<SliderItem>
@{
    ViewData["Title"] = "Sliders";
}

<div class="container-fluid py-2">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3" style="display:flex; justify-content:space-between">
                        <h6 class="text-white text-capitalize ps-3">Sliders table</h6>
                        <a style="margin-right:1.5rem;color:#fff;" asp-controller="Slider" asp-action="Create">Create</a>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Title</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Description</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Edit</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img src="~/imgs/sliders/@data.ImageUrl" class="avatar avatar-sm me-3 border-radius-lg" alt="slider">
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@data.Title</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs text-secondary mb-0">@data.ShortDesc</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <a asp-controller="Slider" asp-action="Update" asp-route-id="@data.Id" class="badge badge-sm bg-gradient-success">Edit</a>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <a asp-controller="Slider" asp-action="Delete" asp-route-id="@data.Id" class="badge badge-sm bg-gradient-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

